{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "express",
      "jest",
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/express.d.ts",
    "src/__tests__/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}